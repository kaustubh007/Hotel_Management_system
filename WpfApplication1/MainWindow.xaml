            <TextBlock HorizontalAlignment="Center" FontSize="30"  Height="40" Margin="214,16,204,0" TextWrapping="Wrap" Text="LOGIN" VerticalAlignment="Top" Width="99"/>
            <Button Content="Login" Background="Green" Click="login" HorizontalAlignment="Left" Height="30" Margin="227,208,0,0" VerticalAlignment="Top" Width="68"/>
        </Grid>


    </Grid>
</Window>
